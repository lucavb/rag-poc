# Required TNG Embedding Server Configuration
TNG_EMBEDDING_API_KEY=your_tng_embedding_api_key_here
TNG_EMBEDDING_BASE_URL=https://your-tng-embedding-server.com

# Required OpenAI Configuration (for chat)
OPENAI_API_KEY=your_openai_api_key_here

# Required Zendesk Configuration
ZENDESK_SUBDOMAIN=your_zendesk_subdomain

# Zendesk Authentication - Choose ONE of the following options:

# Option 1: OAuth Authentication (Recommended - from /oauth/tokens endpoint)
ZENDESK_OAUTH_TOKEN=your_oauth_access_token

# Option 2: API Token Authentication (Traditional - comment out if using OAuth)
# ZENDESK_EMAIL=your_zendesk_email@example.com
# ZENDESK_API_TOKEN=your_zendesk_api_token

# Embedding Configuration
EMBEDDING_MODEL=BAAI/bge-large-en-v1.5

# Chat Configuration
OPENAI_BASE_URL=https://api.openai.com/v1
CHAT_MODEL=gpt-4
MAX_TOKENS=4000
TEMPERATURE=0.7

# Optional Chunking Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Optional File Paths
VECTOR_STORE_PATH=./data/vector-store.json
CHAT_HISTORY_PATH=./data/chat-history.json

# Optional Behavior Configuration
MAX_CONTEXT_MESSAGES=10
MAX_SOURCE_RESULTS=5
MIN_SIMILARITY=0.7

# Optional Logging
LOG_LEVEL=info

# Optional Timeout Configuration (in milliseconds)
API_TIMEOUT_MS=30000

# Optional Article Exclusions (comma-separated list of article IDs to skip)
EXCLUDED_ARTICLE_IDS=
